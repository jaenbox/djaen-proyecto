{# app/Resources/views/incidencia/new.html.twig #}

{% extends 'base.html.twig' %}
{% trans_default_domain 'AppBundle' %}

{% block stylesheets %}
	{{ parent() }}
{% endblock %}

{% block title %}Ordenes de reparación{% endblock %}

{% block body %}
	<div class="container">
		<div class="row">   
       		<div class="col-xs-12">
       			<div class="col-xs-12 col-sm-12">
    				<p style="padding:10px;"></p>
    			</div>
				<ol class="breadcrumb">
		        	<li><a href="{{ path('index') }}">inicio</a></li>
		            <li>incidencia</li>
		       	</ol>		       	       	
		    </div>
		</div>
		<div class="row">
			<div class="col-xs-12 col-sm-12">
        		<h2>Incidencias {{ user.username }}</h2>
				<hr>	
				<p>Gestión de incidencias.</p>
				<hr>
				<ul class="nav nav-tabs">
					<li class="active"><a data-toggle="tab" href="#sectionA">Incidencias</a></li>
					{% if is_granted('ROLE_SUPER_ADMIN') %}
					<li><a data-toggle="tab" href="#sectionB">Estados</a></li>
					{% endif %}
				</ul>
				<div class="tab-content">
					<div id="sectionA" class="tab-pane fade in active">
						<h2>Incidencias</h2>
						{% for rol in roles%}
							{# No se le permite a los help desk y tecnicos generar averias#}
							{% if rol.role != 'ROLE_HELP' and rol.role != 'ROLE_TEC'%}
								<a href="{{ path('newIncidencia') }}"><button type="button" class="btn btn-default">Nueva</button></a>	
							{% endif %}	
						{% endfor %}
						<hr>
						<table class="table table-striped">
							<tbody>
								<thead>
									<tr>
										<td>Id</td>
										<td>Componente</td>
										<td>Estado</td>
										<td>Fecha Alta</td>
										<td>Fecha Cierre</td>
										{% if is_granted('ROLE_HELP') %}
											<td>Editar</td>
										{% endif %}
										{% if is_granted('ROLE_TEC') %}
											<td>Editar</td>
										{% endif %}
										{% if is_granted('ROLE_SUPER_ADMIN') %}
											<td>Editar</td>
											<td>Borrar</td>
										{% endif %}
									</tr>
								</thead>
									{% for incidencia in incidencias%}
										<tr>
											<td><a href="{{
												path(
													'showIncidencia',
													{ 'id': incidencia.id }
												)
												}}">
												{{ incidencia.id }}</a></td>						
											<td>{{ incidencia.componente }}</td>
											<td>{{ incidencia.estado.estado }}</td>		
											{% if incidencia.fechaAlta.fecha | default("") %}
												<td>{{ incidencia.fechaAlta.fecha|date("d/m/Y") }}</td>
											{% endif %}		
											{% if incidencia.fechaCierre.fecha | default("") %}								
												<td>{{ incidencia.fecha_cierre|date("d/m/Y") }}</td>
											{% else %}
												<td></td>
											{% endif %}
											{% if is_granted('ROLE_HELP') %}
											<td><a href="{{
												path(
													'editIncidencia',
													{ 'id': incidencia.id }
												) 
												}}"><i class="fa fa-pencil-square-o"></i></a></td>
											{% endif %}
											{% if is_granted('ROLE_TEC') %}
											<td><a href="{{
												path(
													'editIncidencia',
													{ 'id': incidencia.id }
												) 
												}}"><i class="fa fa-pencil-square-o"></i></a></td>
											{% endif %}
											{% if is_granted('ROLE_SUPER_ADMIN') %}
											<td><a href="{{
												path(
													'editIncidencia',
													{ 'id': incidencia.id }
												) 
												}}"><i class="fa fa-pencil-square-o"></i></a></td>
											<td><a href="{{
												path(
													'deleteIncidencia',
													{ 'id': incidencia.id }
												) 
												}}"><i class="fa fa-trash fa-lg"></i></a></td>
											{% endif %}
										</tr>
									{% endfor %} 
							</tbody>
						</table>
						<hr>
					</div>
					<div id="sectionB" class="tab-pane fade">
        				<h2>Estado</h2>
        				<a href="{{ path('newEstado') }}"><button type="button" class="btn btn-default">Nuevo</button></a>	
						<hr>	
						<table class="table table-striped">
							<tbody>
								<thead>
									<tr>
										<td>Id</td>
										<td>Estado</td>
										<td>Editar</td>
										<td>Eliminar</td>
									</tr>
								</thead>
									{% for estado in estados%}
										<tr>
											<td>{{ estado.id }}</a></td>						
											<td>{{ estado.estado }}</td>											
											<td><a href="{{
												path(
													'editEstado',
													{ 'id': estado.id }
												) 
												}}"><i class="fa fa-pencil-square-o"></i></a></td>
											<td><a href="{{
												path(
													'deleteEstado',
													{ 'id': estado.id }
												) 
												}}"><i class="fa fa-trash fa-lg"></i></a></td>						
										</tr>
									{% endfor %}
							</tbody>
						</table>
        			</div>
				</div>			
			</div>
		</div>
	</div>
{% endblock %}