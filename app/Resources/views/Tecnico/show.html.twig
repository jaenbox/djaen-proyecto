{# app/Resources/views/Tecnico/show.html.twig #}
{% extends "base.html.twig" %}
{% trans_default_domain 'AppBundle' %}

{% block title %} Tecnico-show {% endblock %}
{% block stylesheets %}
	{{ parent() }}
{% endblock %}

{% block body %}
	<div class="container contenedor">
		<div class="row">   
       		<div class="col-xs-12">
       			<div class="col-xs-12 col-sm-12">
    				<p style="padding:10px;"></p>
    			</div>
				<ol class="breadcrumb">
		        	<li><a href="{{ path('index') }}">inicio</a></li>
		        	<li><a href="{{ path('user') }}">tecnico</a></li>
		            <li>show</li>
		       	</ol>
		    </div>
		</div>
		<h2>Tecnico: {{ tecnico.name }}</h2>
		<hr>
		<a href="{{ path('user') }}"><button type="button" class="btn btn-default">Atras</button></a>	
		<hr>
		<table class="table">
			<tbody>
					<tr><th><i class="fa fa-user fa-2x"></th><td>{{ tecnico.id }}</td></tr>
					<tr><th>Nombre</th><td>{{ tecnico.name }}</td></tr>
					<tr><th>Apellidos</th><td>{{ tecnico.surname }}</td></tr>
					<tr><th>DNI</th><td>{{ tecnico.dni }}</td></tr>
					<tr><th><i class="fa fa-at fa-2x"></th><td>{{ tecnico.email }}</td></tr>
					<tr><th><i class="fa fa-phone-square fa-2x"></th><td>{{ tecnico.phone }}</td></tr>					
					<tr><th>Direcci√≥n</th><td>{{ tecnico.address }}</td></tr>
					<tr><th>Especialidad</th><td>	{% if tecnico.especialidad == 's' %}
														Software</td></tr>
													{% else %}
														Hardware</td></tr>	
													{% endif %}
					<tr><th>Administrador</th><td>{{ tecnico.administrador.name }}</td></tr>
		</table> 
		<hr>
	</div>
	
{% endblock %}
{% block javascripts %}{% endblock %}
