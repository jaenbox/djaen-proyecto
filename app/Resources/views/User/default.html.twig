{# app/Resources/views/Usuario/default.html.twig #}

{% extends 'base.html.twig' %}
{% trans_default_domain 'AppBundle' %}

{% block stylesheets %}
	{{ parent() }}
{% endblock %}

{% block title %}Usuarios del sistema{% endblock %}

{% block body %}
	<div class="container">
		<div class="row">   
       		<div class="col-xs-12">
       			<div class="col-xs-12 col-sm-12">
    				<p style="padding:10px;"></p>
    			</div>
				<ol class="breadcrumb">
		        	<li><a href="{{ path('index') }}">inicio</a></li>
		            <li>usuario</li>
		       	</ol>		       	       	
		    </div>
		</div>
		<div class="row">
			<div class="col-xs-12 col-sm-12">
				<h2>Usuarios</h2>			
				<hr>	
				<p>Gestión de usuarios de la aplicación web.</p>
				<hr>
				<ul class="nav nav-tabs">
					<li class="active"><a data-toggle="tab" href="#sectionA">Clientes</a></li>
					<li><a data-toggle="tab" href="#sectionB">Help Desk</a></li>
					<li><a data-toggle="tab" href="#sectionC">Tecnicos</a></li>
					<li><a data-toggle="tab" href="#sectionD">Administrador</a></li>					
				</ul>
				<div class="tab-content">
        			<div id="sectionA" class="tab-pane fade in active">
        				<h2>Cliente</h2>
        				<a href="{{ path('newCliente') }}"><button type="button" class="btn btn-default">Nuevo</button></a>	
						<hr>	
						<table class="table table-striped">
							<tbody>
								<thead>
									<tr>
										<td>Id</td>
										<td>Nombre</td>
										<td>Apellidos</td>
										<td>Teléfono</td>
										<td>Email</td>
										<td>{{ 'global.edit'|trans }}</td>
										<td>{{ 'global.delete'|trans }}</td>
									</tr>
								</thead>
									{% for cliente in clientes %}
										<tr>
											<td><a href="{{
												path(
													'showCliente',
													{ 'id': cliente.id }
												)
												}}">
												{{ cliente.id }}</a></td>						
											<td>{{ cliente.name }}</td>
											<td>{{ cliente.surname }}</td>
											<td>{{ cliente.phone }}</td>
											<td>{{ cliente.email }}</td>							
											
											<td><a href="{{
												path(
													'editCliente',
													{ 'id': cliente.id }
												) 
												}}"><i class="fa fa-pencil-square-o"></i></a></td>
											<td><a href="{{
												path(
													'deleteCliente',
													{ 'id': cliente.id }
												) 
												}}"><i class="fa fa-trash fa-lg"></i></a></td>
											
										</tr>
									{% endfor %} 
							</tbody>
						</table>
        			</div>
        			<div id="sectionB" class="tab-pane fade">
        				<h2>Help Desk</h2>
        				<a href="{{ path('newHelpDesk') }}"><button type="button" class="btn btn-default">Nuevo</button></a>	
						<hr>	
						<table class="table table-striped">
							<tbody>
								<thead>
									<tr>
										<td>Id</td>
										<td>Nombre</td>
										<td>Apellidos</td>
										<td>Teléfono</td>
										<td>Email</td>
										<td>Editar</td>
										<td>Eliminar</td>
									</tr>
								</thead>
									{% for helpdesk in helpdesks%}
										<tr>
											<td><a href="{{
												path(
													'showHelpDesk',
													{ 'id': helpdesk.id }
												)
												}}">
												{{ helpdesk.id }}</a></td>						
											<td>{{ helpdesk.name }}</td>
											<td>{{ helpdesk.surname }}</td>
											<td>{{ helpdesk.phone }}</td>
											<td>{{ helpdesk.email }}</td>										
											<td><a href="{{
												path(
													'editHelpDesk',
													{ 'id': helpdesk.id }
												) 
												}}"><i class="fa fa-pencil-square-o"></i></a></td>
											<td><a href="{{
												path(
													'deleteHelpDesk',
													{ 'id': helpdesk.id }
												) 
												}}"><i class="fa fa-trash fa-lg"></i></a></td>											
										</tr>
									{% endfor %} 
							</tbody>
						</table>
        			</div>
        			<div id="sectionC" class="tab-pane fade">
        				<h2>Tecnico</h2>
        				<a href="{{ path('newTecnico') }}"><button type="button" class="btn btn-default">Nuevo</button></a>	
						<hr>	
						<table class="table table-striped">
							<tbody>
								<thead>
									<tr>
										<td>Id</td>
										<td>Nombre</td>
										<td>Apellidos</td>
										<td>Teléfono</td>
										<td>Email</td>
										<td>Editar</td>
										<td>Eliminar</td>
									</tr>
								</thead>
									{% for tecnico in tecnicos%}
										<tr>
											<td><a href="{{
												path(
													'showTecnico',
													{ 'id': tecnico.id }
												)
												}}">
												{{ tecnico.id }}</a></td>						
											<td>{{ tecnico.name }}</td>
											<td>{{ tecnico.surname }}</td>
											<td>{{ tecnico.phone }}</td>
											<td>{{ tecnico.email }}</td>										
											<td><a href="{{
												path(
													'editTecnico',
													{ 'id': tecnico.id }
												) 
												}}"><i class="fa fa-pencil-square-o"></i></a></td>
											<td><a href="{{
												path(
													'deleteTecnico',
													{ 'id': tecnico.id }
												) 
												}}"><i class="fa fa-trash fa-lg"></i></a></td>											
										</tr>
									{% endfor %} 
							</tbody>
						</table>
        			</div>
        			<div id="sectionD" class="tab-pane fade">
						<h2>Administrador</h2>
        				<a href="{{ path('newAdministrador') }}"><button type="button" class="btn btn-default">Nuevo</button></a>	
						<hr>	
						<table class="table table-striped">
							<tbody>
								<thead>
									<tr>
										<td>Id</td>
										<td>Nombre</td>
										<td>Apellidos</td>
										<td>Teléfono</td>
										<td>Email</td>						
										<td>Editar</td>
										<td>Eliminar</td>
										
									</tr>
								</thead>
									{% for admin in admins%}
										<tr>
											<td><a href="{{
												path(
													'showAdministrador',
													{ 'id': admin.id }
												)
												}}">
												{{ admin.id }}</a></td>						
											<td>{{ admin.name }}</td>
											<td>{{ admin.surname }}</td>
											<td>{{ admin.phone }}</td>
											<td>{{ admin.email }}</td>							
											
											<td><a href="{{
												path(
													'editAdministrador',
													{ 'id': admin.id }
												) 
												}}"><i class="fa fa-pencil-square-o"></i></a></td>
											<td><a href="{{
												path(
													'deleteAdministrador',
													{ 'id': admin.id }
												) 
												}}" onclick="return confirm('are u sure?')"><i class="fa fa-trash fa-lg"></i></a></td>									
										</tr>
									{% endfor %} 
							</tbody>
						</table>
        			</div>
        		</div>
				<hr>			
			</div>
		</div>
	</div>
{% endblock %}
{# table table-striped //  table-bordered#}